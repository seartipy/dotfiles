#! /usr/bin/env bash

# utils

BOLD=`tput bold`
RED=`tput setaf 1`
GREEN=`tput setaf 2`
YELLOW=`tput setaf 3`
RESET=`tput sgr0`
WHITE=`tput setaf 7`

slog() {
    echo "
${BOLD}${WHITE}SEARTIPY: ${RESET} $1
" | tee -a ~/seartipy-installer.log
}

warn() {
    echo "
${BOLD}${YELLOW}WARNING: ${RESET} $1
" | tee -a ~/seartipy-installer.log
}

err_exit() {
    echo "
${BOLD}${RED}FATAL : ${RESET} $1
" | tee -a ~/seartipy-installer.log

    exit 1
}

is_ubuntu() {
    has_cmd lsb_release || return 1
    local os=`echo $(lsb_release -i | cut -d ':' -f2)`
    [[ "Ubuntu" == "$os" ]] || return 1
}

is_xenial() {
    has_cmd lsb_release || return 1
    local os=`echo $(lsb_release -c | cut -d ':' -f2)`
    [[ "xenial" == "$os" ]] || return 1
}

is_fedora() {
    [ -f /etc/redhat-release ] || return 1
}

is_linux() {
    [ "$OSTYPE" == "linux-gnu" ] || return 1
}

is_mac() {
    [[ "$OSTYPE" == "darwin"* ]] || return 1
}

has_cmd() {
    command -v $1 > /dev/null
}

smv() {
    mv $1 $2 2> /dev/null
}

smd() {
    [ -d "$1" ] || mkdir -p "$1" 2> /dev/null
}

srm() {
    $trash $1 $2 2> /dev/null
}

sln() {
    if ! [ -e "$1" ]; then
        warn "$1 does not exist, cannot create the link $2"
    elif [ -L "$2" ]; then
        srm "$2"
    elif [ -e "$2" ]; then
        warn "$2 exists and not a symbolic link! not creating link"
        return
    fi
    ln -s $1 $2
}

sclone() {
    if ! [ -d "$2" ]; then
        slog "Cloning $1 to $2"
        git clone $1 $2
    fi
}

scopy() {
    [ -e "$2" ] || cp "$1" "$2"
}

pre_cmd_check() {
    for cmd in $*; do
        has_cmd "$cmd" || err_exit "$cmd not installed, quitting"
    done
}

pre_dir_check() {
    for dir in $*; do
        [ -d "$dir" ] || err_exit "$dir does not exist, quitting"
    done
}

cmd_check() {
    for cmd in $*; do
        has_cmd "$cmd" || warn "$cmd not installed"
    done
}

dir_check() {
    for dir in $*; do
        [ -d "$dir" ] || warn "$dir does not exist"
    done
}

ln_check() {
    local rl=readlink
    if is_mac; then
        rl=greadlink
    fi

     [[ "$1" == $($rl -f $2) ]] ||  warn "$2 not a link to $1"
}

ppa_exists() {
    ls /etc/apt/sources.list.d | grep "$1" > /dev/null || return 1
}

ppa_check() {
    ppa_exists || warn "$1 ppa not added"
}

apm_exists() {
    apm ls --installed --bare | cut -d "@" -f 1 | grep "^$1$" > /dev/null || return 1
}

apm_check() {
    for p in $*; do
        apm_exists "$p" || warn "$p atom package not installed"
    done
}

apmi() {
    has_cmd apm || return 1

    for p in $*; do
        apm_exists "$p" || apm install $p
    done
}

npm_exists() {
    npm list --global --depth=0 "$1" &> /dev/null || return 1
}

npm_check() {
    for p in $*; do
        npm_exists "$p" || warn "$p atom package not installed"
    done
}


brew_exists() {
    brew list | grep "^$1$" || return 1
}

brew_check() {
    for p in $*; do
        brew_exists "$p" || warn "$p brew cask package not installed"
    done
}

brew_cask_exists() {
    brew cask list | grep "$1" || return 1
}

brew_cask_check() {
    for p in $*; do
        brew_cask_exists "$p" || warn "$p brew cask package not installed"
    done
}

stackexei() {
    has_cmd stack || return 1

    for p in $*; do
        stack install $p
    done
}

npmi() {
    has_cmd npm || return 1

    for p in $*; do
        npm_exists "$p" || npm install -g "$p"
    done
}

#
# PPAs

add_java_ppa() {
    is_ubuntu || return 1
    ppa_exists webupd8team-ubuntu-java && return 0

    slog "Adding java ppa"
    echo "oracle-java8-installer shared/accepted-oracle-license-v1-1 select true" | sudo debconf-set-selections
    sudo add-apt-repository ppa:webupd8team/java -y
}

add_scala_ppa() {
    is_ubuntu || return 1
    ppa_exists sbt && return 0

    slog "Adding scala ppa"
    sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv 642AC823
    echo "deb http://dl.bintray.com/sbt/debian /" | sudo tee -a /etc/apt/sources.list.d/sbt.list
}

add_smartgit_ppa() {
    is_ubuntu || return 1
    ppa_exists eugenesan-ubuntu-ppa && return 0

    slog "Adding smartgit ppa"
    sudo add-apt-repository ppa:eugenesan/ppa -y
}

add_haskell_stack_ppa() {
    is_ubuntu || return 1
    ppa_exists fpco && return 0

    slog "Adding stack ppa"
    wget -q -O- https://s3.amazonaws.com/download.fpcomplete.com/ubuntu/fpco.key | sudo apt-key add -
    echo 'deb http://download.fpcomplete.com/ubuntu/wily stable main' | sudo tee /etc/apt/sources.list.d/fpco.list
}

add_zeal_ppa() {
    is_ubuntu || return 1
    ppa_exists zeal-developers-ubuntu && return 0

    slog "Adding zeal ppa"
    sudo add-apt-repository ppa:zeal-developers/ppa -y
}

add_chrome_ppa() {
    is_ubuntu || return 1
    ppa_exists google-chrome && return 0

    slog "Adding google chrome ppa"
    wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
    sudo sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list'
}

add_webupd8_ppa() {
    is_ubuntu || return 1
    ppa_exists nilarimogard-ubuntu-webupd8 && return 0

    slog "Adding webupd8 ppa for youtub-dl etc"
    sudo add-apt-repository  ppa:nilarimogard/webupd8 -y
}

add_virtualbox_ppa() {
    is_xenial && return 1
    is_ubuntu || return 1

    if ! has_cmd vmware-user-suid-wrapper; then
        slog "Adding virtualbox ppa"
        if ! grep download.virtualbox.org/virtualbox/debian /etc/apt/sources.list > /dev/null; then
            wget -q https://www.virtualbox.org/download/oracle_vbox.asc -O- | sudo apt-key add -
            sudo sh -c 'echo "deb http://download.virtualbox.org/virtualbox/debian vivid contrib" >> /etc/apt/sources.list'
        fi
    fi
}

add_atom_ppa() {
    is_ubuntu || return 1
    ppa_exists webupd8team-ubuntu-atom && return 0
    slog "Adding atom ppa"
    sudo add-apt-repository  ppa:webupd8team/atom -y
}

add_docker_ppa() {
    is_ubuntu || return 1

    if ! has_cmd vmware-user-suid-wrapper && ! ppa_exists docker; then
        slog "Installing docker"
        wget -qO- https://get.docker.com/ | sh
        sudo usermod -aG docker $USER
    fi
}

add_r_ppa() {
    is_ubuntu || return 1
    ppa_exists rutter && return 0

    slog "Adding r ppa"
    sudo add-apt-repository ppa:marutter/rrutter -y
}

add_numix_ppa() {
    is_ubuntu || return 1
    ppa_exists numix && return 0

    slog "Adding numix ppa"
    sudo add-apt-repository ppa:numix/ppa -y
}

add_arc_theme_ppa() {
    is_ubuntu || return 1
    ppa_exists arc-theme && return 1

    slog "Adding arc theme ppa"
    wget -qO- http://download.opensuse.org/repositories/home:Horst3180/xUbuntu_15.10/Release.key | sudo apt-key add -
    echo 'deb http://download.opensuse.org/repositories/home:/Horst3180/xUbuntu_15.10/ /' | sudo tee -a /etc/apt/sources.list.d/arc-theme.list
}

add_conky_manager_ppa() {
    is_ubuntu || return 1
    ppa_exists teejee2008 && return 1

    slog "Adding conky manager ppa"
    sudo add-apt-repository ppa:teejee2008/ppa -y
}

add_ppas() {
    pre_cmd_check debconf-set-selections add-apt-repository apt-key wget

    add_java_ppa
    add_scala_ppa
    add_smartgit_ppa
    add_haskell_stack_ppa

    is_xenial || add_zeal_ppa
    add_atom_ppa
    add_virtualbox_ppa
    add_chrome_ppa
    add_webupd8_ppa
    add_docker_ppa
    is_xenial || add_r_ppa

    add_numix_ppa
    add_arc_theme_ppa
    add_conky_manager_ppa
}

#
# essential

essential_ubuntu_install() {
    is_ubuntu || return 1

    pre_cmd_check apt-get
    add_ppas

    slog "Updating ubuntu"
    if ! sudo apt-get update; then
        err_exit "apt-get update failed, quitting"
    fi

    slog "Upgrading packages"
    if ! sudo apt-get upgrade -y; then
        err_exit "apt-get upgrade failed, quitting"
    fi

    slog "Installing essential packages"
    sudo apt-get install -y curl wget git trash-cli tree xsel xclip silversearcher-ag unrar p7zip dconf-cli build-essential google-chrome-stable tmux exfat-fuse exfat-utils linux-headers-`uname -r`

    if is_xenial; then
        warn "cannot install zeal on xenial"
    else
        sudo apt-get install -y zeal
    fi
}

essential_mac_install() {
    is_mac || return 1

    if ! has_cmd brew; then
        pre_cmd_check ruby

        slog "Installing homebrew"
        ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
    fi

    pre_cmd_check brew

    slog "Installing brew cask"
    brew install caskroom/cask/brew-cask

    slog "Upgrading brew packages"
    brew update && brew upgrade

    brew install wget trash tree fasd unrar p7zip gpg the_silver_searcher coreutils tmux gpg
    brew cask install iterm2

}

essential_fedora_install() {
    is_fedora || return 1

    pre_cmd_check dnf

    slog "Add rpmfusion free and non free packages"
    sudo dnf install -y http://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm http://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm

    slog "Installing essential packages"
    sudo dnf install -y curl wget git trash-cli tree xsel xclip the_silver_searcher unar p7zip dconf tmux

}

fasd_install() {
    is_linux || return 1
    has_cmd fasd && return 0

    slog "Installing fasd"
    if git clone https://github.com/clvv/fasd.git ~/seartipy-installer-fasd; then
        cd ~/seartipy-installer-fasd && PREFIX=$HOME make install
        srm ~/seartipy-installer-fasd
    fi
}

essential_install() {
    essential_ubuntu_install
    essential_fedora_install
    essential_mac_install

    fasd_install
}

#
# cleanup

cleanup_ubuntu() {
    is_ubuntu || return 1
    sudo apt-get clean
    sudo apt-get autoclean
    sudo apt-get autoremove -y
}

cleanup_mac() {
    is_mac || return 1

    slog "cleanup brew"
    brew cleanup
    brew cask cleanup
}
cleanup_fedora() {
    is_fedora || return 1

    slog "dnf cleanup"
    sudo dnf clean all
}

cleanup() {
    cleanup_ubuntu
    cleanup_fedora
    cleanup_mac
}

#
# dotfiles

clone_lean_dotfiles() {
    slog "Backing up your current lean-dotfiles(if exists) to $BACKUP_DIR"
    smv ~/seartipy/lean-dotfiles $BACKUP_DIR

    sclone https://perveziqbal@bitbucket.org/perveziqbal/lean-dotfiles.git ~/seartipy/lean-dotfiles

    [ -n "$SEARTIPY" ] && cd ~/seartipy/lean-dotfiles && git checkout develop
}

clone_dotfiles() {
    slog "Backing up your current dotfiles(if exists) to $BACKUP_DIR"
    smv ~/seartipy/dotfiles $BACKUP_DIR

    sclone https://github.com/pervezfunctor/dotfiles.git ~/seartipy/dotfiles

    [ -n "$SEARTIPY" ] && cd ~/seartipy/dotfiles && git checkout develop
}

tmux_dotfiles() {
    [ -f ~/seartipy/dotfiles/tmux.conf ] || return 1

    slog "Moving ~/.tmux.conf to $BACKUP_DIR"
    smv ~/.tmux.conf $BACKUP_DIR

    slog "Linking ~/seartipy/dotfiles/tmux.conf to ~/.tmux.conf"
    sln ~/seartipy/dotfiles/tmux.conf ~/.tmux.conf
}

amethyst_dotfiles() {
    is_mac || return 1
    [ -f ~/seartipy/dotfiles/amethyst ] || return 1

    slog "Moving ~/.amethyst to $BACKUP_DIR"
    smv ~/.amethyst $BACKUP_DIR

    slog "Linking ~/seartipy/dotfiles/amethyst to ~/.amethyst"

    sln ~/seartipy/dotfiles/amethyst ~/.amethyst
}

dotfiles_install() {
    clone_lean_dotfiles
    clone_dotfiles

    tmux_dotfiles
    amethyst_dotfiles
}

#
# bash

mac_bash_dotfiles() {
    is_mac || return 1
    [ -f ~/seartipy/dotfiles/bashrc ] || return 1

    slog "Moving ~/.bash_profile to $BACKUP_DIR"
    smv ~/.bashrc $BACKUP_DIR
    sln ~/seartipy/dotfiles/bashrc ~/.bashrc
}

linux_bash_dotfiles() {
    is_linux || return 1
    [ -f ~/seartipy/dotfiles/bashrc ] || return 1

    slog "Moving ~/.bash_profile to $BACKUP_DIR"
    smv ~/.bash_profile $BACKUP_DIR
    sln ~/seartipy/dotfiles/bashrc ~/.bash_profile

    if ! grep .bash_profile ~/.bashrc > /dev/null; then
        echo "[ -f ~/.bash_profile ] && source ~/.bash_profile" >> ~/.bashrc
    fi
}

bash_install() {
    mac_bash_dotfiles
    linux_bash_dotfiles

    sclone https://github.com/nojhan/liquidprompt.git ~/seartipy/vendors/liquidprompt
}

