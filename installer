ubuntu_atom_install() {
    is_ubuntu || return 1
    sudo apt-get install -y atom
}

fedora_atom_install() {
    is_fedora || return 1
    sudo dnf -y copr enable helber/atom
    sudo dnf install -y atom
}

mac_atom_install() {
    is_mac || return 1
    brew cask install atom
}

atom_install() {
    ubuntu_atom_install
    mac_atom_install
    fedora_atom_install

    apmi proton-mode

    slog "Linking ~/seartipy/dotfiles/atom-proton to ~/.proton"
    sln ~/seartipy/dotfiles/atom-proton ~/.proton
}

