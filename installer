#
# ruby

ruby_install() {
    if ! has_cmd rvm || ! rvm list rubies | grep "=* ruby"; then
        slog "Installing rvm"
        gpg2 --keyserver hkp://keys.gnupg.net --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3
        curl -sSL https://get.rvm.io | bash -s stable --ruby
    fi

    source ~/.rvm/scripts/rvm
    slog "Installing ruby gems"
    if is_mac; then
        gem install eventmachine -- --with-cppflags=-I/usr/local/opt/openssl/include
    fi
    gem install pry sinatra thin guard watchr tmuxinator git-up sass  overcommit --no-ri --no-rdoc

    is_mac && gem install xcpretty -no-ri --no-rdoc
}

