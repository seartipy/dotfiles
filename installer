flow_install() {
    is_linux || return 1
    has_cmd flow && return 1

    npmi flow-bin
}

node_linux_install() {
    is_linux || return 1

    [ -f ~/.nvm/nvm.sh ] && source ~/.nvm/nvm.sh

    slog "Installing nvm"
    has_cmd nvm || curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.0/install.sh | bash

    source ~/.nvm/nvm.sh
    nvm install node
    nvm alias default node
}

web_install() {
    web_mac_install
    node_linux_install
    flow_install

    slog "Installing npm packages for web development"
    npmi coffee-script typescript
    npmi eslint jshint coffeelint eslint-plugin-react
    npmi gulp grunt-cli
    npmi babel-cli babel-eslint
    npmi browserify watchify babelify budo
    npmi webpack webpack-dev-server
    npmi tern js-beautify karma-cli
}

