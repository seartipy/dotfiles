source "${HOME}/.seartipy/scripts/utils.sh"

source "${HOME}/.seartipy/aliases"

if is_mac; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif is_ubuntu; then
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

# exports
export PATH="$HOME/bin:$PATH"

if is_ubuntu; then
    export JAVA_HOME="/usr/lib/jvm/java-8-oracle"
    export JDK_HOME=$JAVA_HOME
fi

if is_fedora; then
    export JAVA_HOME=$(readlink -f /usr/bin/java | sed "s:bin/java::")
    export JDK_HOME=$JAVA_HOME
fi

if is_mac; then
    JAVA_HOME=$(/usr/libexec/java_home -v 1.8 2> /dev/null)
    export JAVA_HOME

    JDK_HOME=$(/usr/libexec/java_home -v 1.8 2> /dev/null)
    export JDK_HOME

    #brew
    export PATH="/usr/local/sbin:/usr/local/bin:$PATH"
fi

#node
[ -s "$HOME/.nvm/nvm.sh" ] && source "$HOME/.nvm/nvm.sh"
if [ -d "$HOME/.volta" ]; then
    export VOLTA_HOME="$HOME/.volta"
    export PATH="$VOLTA_HOME/bin:$PATH"
fi

export NVM_DIR="$HOME/.nvm"

#python
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

if has_cmd pyenv; then
    eval "$(pyenv init - --no-rehash)"
    eval "$(pyenv virtualenv-init -)"
fi

#haskell
export PATH="$HOME/.cabal/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH" # haskell stack

#scala
export PATH="$HOME/.local/share/coursier/bin:$PATH"
