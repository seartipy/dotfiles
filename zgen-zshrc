[ -d ~/.zgen ] || git clone https://github.com/tarjoilija/zgen.git ~/.zgen

source "${HOME}/.zgen/zgen.zsh"

[ -s ~/.zshrc-pre.local ] && source ~/.zshrc-pre.local

# check if there's no init script
if ! zgen saved; then
    echo "Creating a zgen save"

    # prezto options
    zgen prezto editor key-bindings 'emacs'
    zgen prezto editor dot-expansion 'yes'
    zgen prezto tmux:auto-start local 'yes'

    zgen prezto prompt theme 'peepcode' "‚ùØ"
    zstyle terminal auto-title 'yes'

    zgen prezto syntax-highlighting color 'yes'
    # prezto and modules
    zgen prezto
    zgen prezto environment
    zgen prezto utility
    zgen prezto spectrum
    zgen prezto archive
    zgen prezto terminal
    zgen prezto directory
    zgen prezto emacs
    zgen prezto git
    zgen prezto command-not-found
    zgen prezto completion
    zgen prezto fasd
    zgen prezto gnu-utility
    zgen prezto osx
    zgen prezto history
    zgen prezto history-substring-search
    zgen prezto syntax-highlighting
    zgen prezto tmux

    source ~/seartipy/dotfiles/shellrc

    # plugins
    # zgen load /path/to/super-secret-private-plugin
    zgen load djui/alias-tips

    # save all to init script
    zgen save
fi

[ -s ~/.zshrc-post.local ] && source ~/.zshrc-post.local
